<body>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
           <img src="http://localhost:7000/upload2/<%= newdata.image %>" alt="Product Image" class="">
        </div>
        <div class="col-md-5">
            <div class="product-details">
                <h2><%= newdata.productname %></h2>
                <p><%= newdata.productdescription %></p>
                <p><strong>&#8377 <%= newdata.price %></strong></p>
                <p><strong>Availability: In Stock</strong></p>
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" value="1" min="1">
                <br><br>
                <button class="btn btn-primary">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

